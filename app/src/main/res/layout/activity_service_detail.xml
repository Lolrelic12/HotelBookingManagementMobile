<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Service Image -->
    <ImageView
        android:id="@+id/imgService"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#DDD"
        android:contentDescription="Service Image" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvServiceDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service description goes here. It explains what the service is about."
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/serviceTvAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#4CAF50" /> <!-- Green color for available -->
    <!-- Price -->
    <TextView
        android:id="@+id/tvServicePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: VND 10,000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="#1E88E5" />

    <!-- Close Button -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white" />
</LinearLayout>
