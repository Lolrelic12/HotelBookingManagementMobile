<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Room info -->
        <TextView
            android:id="@+id/roomNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 101"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/checkInOutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in: Jul 25 | Check-out: Jul 27"
            android:textSize="14sp"
            android:layout_below="@id/roomNameText"
            android:layout_marginTop="4dp"
            android:textColor="#666"/>

        <!-- Booking Status -->
        <TextView
            android:id="@+id/bookingStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_below="@id/checkInOutText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <!-- Order Service Button aligned to right -->
        <Button
            android:id="@+id/btnOrderService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Service"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/checkInOutText"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
